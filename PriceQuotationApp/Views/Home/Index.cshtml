@model PriceQuotationApp.Models.PriceQuotation

@{
    ViewData["Title"] = "Price Quotation";
}

<h2>Price Quotation</h2>

<form asp-action="Index" method="post">

    <div>
        <label asp-for="Subtotal">Subtotal:</label>
        <input asp-for="Subtotal" type="number" />
    </div>

    <div>
        <label asp-for="DiscountPercent">Discount Percent:</label>
        <input asp-for="DiscountPercent" type="number" />
    </div>
    
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
    
    <div>
        <label>Discount Amount:</label>
        <span>@Model.DiscountAmount.ToString("C")</span>
    </div>
    
    <div>
        <label>Total:</label>
        <span>@Model.Total.ToString("C")</span>
    </div>

</form>
